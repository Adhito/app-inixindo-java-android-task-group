<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="0dp">

        <TextView
            android:id="@+id/txt_id_produk"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="16dp"
            android:text="TextView"
            android:textAlignment="textStart"
            android:textColor="#270303"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="invisible"
            android:focusable="false"
            android:clickable="false" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cardviewstyle"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_nama_produk"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginLeft="16dp"
                    android:text="TextView"
                    android:textAlignment="textStart"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-black"
                    android:textStyle="bold"
                    android:focusable="false"
                    android:clickable="false" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_jatuh_tempo"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="2"
                        android:text="TextView"
                        android:textAlignment="textStart"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:focusable="false"
                        android:clickable="false"/>

                    <Button
                        android:id="@+id/button"
                        android:layout_width="60dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="5dp"
                        android:text="Beli"
                        android:textSize="11sp"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/black"
                        android:focusable="false"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_yieldTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="26dp"
                        android:text="Yield Beli"
                        android:textAlignment="textStart"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:focusable="false"
                        android:clickable="false"/>

                    <TextView
                        android:id="@+id/txt_nilai_unitTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="16dp"
                        android:text="Nilai Unit"
                        android:textAlignment="textStart"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:focusable="false"
                        android:clickable="false"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_yield"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="26dp"
                        android:text="1.00"
                        android:textAlignment="textStart"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:focusable="false"
                        android:clickable="false"/>
                    <TextView
                        android:id="@+id/txt_nilai_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="48dp"
                        android:text="TextView"
                        android:textAlignment="textStart"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:focusable="false"
                        android:clickable="false"/>
                </LinearLayout>
            </LinearLayout>
    </LinearLayout>
</layout>